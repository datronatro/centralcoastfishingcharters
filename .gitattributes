*.mp4 filter=lfs diff=lfs merge=lfs -text
/public/**/*.png filter=lfs diff=lfs merge=lfs -text
/public/**/*.jpg filter=lfs diff=lfs merge=lfs -text
/public/**/*.jpeg filter=lfs diff=lfs merge=lfs -text
/public/**/*.JPG filter=lfs diff=lfs merge=lfs -text
/public/**/*.avif filter=lfs diff=lfs merge=lfs -text

# Don't use LFS for app directory images
/app/*.png -filter -diff -merge
